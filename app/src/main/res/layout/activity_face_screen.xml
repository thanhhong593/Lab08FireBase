<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Face_screen">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="37dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="56dp"
            android:text="PLEASE TOUCH ONE!"
            android:textColor="#008EFF"
            android:textSize="20dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_happy"
        android:layout_width="126dp"
        android:layout_height="128dp"
        android:src="@drawable/group_3"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="170dp"
        />

    <ImageView
        android:id=" @+id/btn_unhappy"
        android:layout_width="130dp"
        android:layout_height="126dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/group_4"
        />

    <ImageView
        android:id="@+id/btn_normal"
        android:layout_width="130dp"
        android:layout_height="126dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/group_5"/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="195dp"
        android:layout_height="62dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="264dp"
        android:background="@drawable/layout_button"
        android:text="FINISH"
        app:backgroundTint="#EF77B0"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>