<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:id="@+id/view"
        android:layout_width="583dp"
        android:layout_height="195dp"
        android:background="@drawable/layout_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_SignIN"
        android:layout_width="228dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/layout_button"
        android:text="SIGN IN"
        app:backgroundTint="#EF77B0"
        app:layout_constraintBottom_toTopOf="@+id/btn_register"
        app:layout_constraintEnd_toEndOf="@+id/btn_register"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_register" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="235dp"
        android:layout_height="59dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/layout_button"
        android:text="@string/btn_link_to_register"
        app:backgroundTint=" #5393F3"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.334"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btn_happy"
        android:layout_width="169dp"
        android:layout_height="163dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintStart_toStartOf="@+id/btn_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_3" />

    <ImageView
        android:id="@+id/btn_normal"
        android:layout_width="162dp"
        android:layout_height="164dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_happy"
        app:srcCompat="@drawable/group_5" />

    <ImageView
        android:id="@+id/btn_unhappy"
        android:layout_width="159dp"
        android:layout_height="156dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_happy"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toEndOf="@+id/btn_normal"
        app:layout_constraintTop_toBottomOf="@+id/btn_happy"
        app:srcCompat="@drawable/group_4" />

</androidx.constraintlayout.widget.ConstraintLayout>